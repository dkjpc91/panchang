<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="28dp"
    android:background="@drawable/customdrawable"
    app:cardBackgroundColor="#FFFF00">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@android:color/white">

        <!-- Bell Icon at top right corner -->
        <ImageView
            android:id="@+id/bell_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bell"
            app:tint="@color/blue"
            android:layout_gravity="end" />

        <!-- Task Title -->
        <TextView
            android:id="@+id/task_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="किराने का सामान खरीदना"
            android:textColor="@color/blue"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp" />

        <!-- Task Description -->
        <TextView
            android:id="@+id/task_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="सुपरमार्केट से दूध, अंडे, ब्रेड और सब्जियां खरीदें।"
            android:textColor="#04467A"
            android:textSize="20sp"
            android:layout_marginBottom="8dp" />

        <!-- Task Date and Time -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/task_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="दिनांक: 2023-05-15"
                android:textColor="@color/black"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/task_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="समय: सुबह 10:00 बजे"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginStart="16dp"/>
        </LinearLayout>

        <!-- Additional Information Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Tithi Label and Value -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tithi: "
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tithi_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="[Dynamic Value]"
                    android:textColor="@color/black"
                    android:textSize="18sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/nakshatra_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nakshatra: [Dynamic Value]"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Month: [Dynamic Value]"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date: [Dynamic Value]"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/sunrise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sunrise: [Dynamic Value]"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/sunset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sunset: [Dynamic Value]"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tithi_endtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tithi End Time: [Dynamic Value]"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/nakshatra_endtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nakshatra End Time: [Dynamic Value]"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/yog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yog: [Dynamic Value]"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/month_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Month Name: [Dynamic Value]"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/rashi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rashi: [Dynamic Value]"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/paksha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paksha: [Dynamic Value]"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </LinearLayout>

        <!-- Delete Icon at bottom right corner -->
        <ImageView
            android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_close_24"
            android:layout_gravity="end"
            android:layout_marginTop="16dp"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
