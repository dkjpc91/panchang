<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/holidaysliderview"
    android:background="@drawable/holidayscroll"
    android:layout_height="match_parent">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <!-- Sanskrit Quote TextView -->
        <TextView
            android:layout_marginTop="13dp"
            android:id="@+id/holidayname"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:ellipsize="none"
            android:gravity="center"
            android:text=""
            android:textColor="@color/red"
            android:textSize="32sp"
            android:textStyle="bold" />

        <!-- Hindi Translation TextView -->
        <TextView
            android:layout_marginTop="-5dp"
            android:padding="10dp"
            android:id="@+id/holidaygreeting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/holidayname"
            android:layout_centerHorizontal="true"
            android:ellipsize="none"
            android:gravity="center"
            android:maxLines="5"
            android:text=""
            android:textColor="#3F51B5"
            android:textSize="26sp" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>